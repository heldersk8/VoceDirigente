@model IEnumerable<Dominio.Jogadores.Jogador>

<link rel="stylesheet" href="~/interface/css/campanhas.css">

<h1>Campanhas</h1>

<div class="mensagem">
    <big>Faça nosso time mais forte!</big>
    <small>Ajude trazer mais um ídolo para a nação.</small>
    <img src="~/interface/img/background.jpg" />
</div>

@foreach (var jogador in Model.GroupBy(x => x.Posicao))
{
    var posicao = (int)jogador.Key;
    <a href="@Url.Action("JogadoresPorPosicao", new { posicao })" class="campanhas">
        <h2>@jogador.Key</h2>
        <span class="escolha">Ajude a contratar</span>
        <img src="~/interface/img/atacantes.png" />
    </a>
}
